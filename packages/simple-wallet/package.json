{
    "name": "@flarenetwork/simple-wallet",
    "version": "1.3.7",
    "description": "Fasset bots simple wallet",
    "engines": {
        "node": ">=14.6.0"
    },
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "default": "./dist/src/index.js"
        }
    },
    "author": "Flare Foundation",
    "homepage": "https://github.com/flare-foundation/fasset-bots",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flare-foundation/fasset-bots.git",
        "directory": "packages/simple-wallet"
    },
    "license": "MIT",
    "files": [
        "/dist",
        "/src"
    ],
    "scripts": {
        "---------PUBLISH---SCRIPTS": "",
        "publish": "echo npm publish",
        "prepack": "yarn build",
        "---------BUILD---SCRIPTS": "",
        "prebuild": "rm -rf dist",
        "build": "tsc --allowJs",
        "---------LINT---SCRIPTS": "",
        "lint": "yarn run -T eslint \"src/**/*ts\" \"test/**/*ts\"",
        "---------TEST---SCRIPTS": "",
        "test": "yarn run -T mocha",
        "test_all": "yarn test --recursive \"test/**/*.test.ts\"",
        "test:coverage": "yarn run -T nyc yarn test_all",
        "mainnet-secrets": "node dist/test/test-util/mainnet_secrets.js",
        "test-mainnet-btc": "yarn run -T mocha test/BTC/mainnet.test.ts",
        "test-mainnet-doge": "yarn run -T mocha test/DOGE/mainnet.test.ts",
        "test-mainnet-xrp": "yarn run -T mocha test/XRP/mainnet.test.ts"
    },
    "dependencies": {
        "@flarenetwork/fasset-bots-common": "workspace:*",
        "@mikro-orm/core": "5.8.4",
        "@mikro-orm/knex": "5.8.4",
        "@mikro-orm/mysql": "5.8.4",
        "@mikro-orm/postgresql": "5.8.4",
        "@mikro-orm/sqlite": "5.8.4",
        "@types/bitcore-lib": "0.15.6",
        "@types/bn.js": "5.1.5",
        "@types/bs58check": "2.1.0",
        "@types/elliptic": "6.4.18",
        "@types/node": "22.9.0",
        "axios": "1.5.1",
        "bip32": "5.0.0-rc.0",
        "bip39": "3.0.4",
        "bip84": "0.2.9",
        "bitcoinjs-lib": "6.1.7",
        "bitcore-lib": "10.0.36",
        "bitcore-lib-doge": "10.0.36",
        "bn.js": "5.2.1",
        "commander": "11.0.0",
        "crypto": "1.0.1",
        "dogecoin-bip84": "0.0.5",
        "dotenv": "16.3.1",
        "elliptic": "6.6.1",
        "ripple-address-codec": "4.2.4",
        "ripple-binary-codec": "1.4.2",
        "ripple-keypairs": "2.0.0",
        "source-map-support": "0.5.21",
        "web3-utils": "1.10.2",
        "xrpl": "2.3.1"
    },
    "devDependencies": {
        "@types/chai": "4.3.6",
        "@types/chai-as-promised": "7.1.6",
        "@types/eslint__js": "8.42.3",
        "@types/mocha": "10.0.8",
        "@types/sinon": "17.0.3",
        "chai": "4.3.8",
        "chai-as-promised": "7.1.1",
        "read": "4.0.0",
        "rewire": "7.0.0",
        "sinon": "18.0.0",
        "typescript": "5.9.2",
        "wallet-address-validator": "0.2.4"
    },
    "packageManager": "yarn@3.6.4"
}
