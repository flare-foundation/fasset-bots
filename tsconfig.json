{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "test/types",
            "node_modules/@types",
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "./typechain-truffle",
        "./typechain-truffle/types.d.ts",
        "./hardhat.config.ts"
, "test-hardhat/unit", "test-hardhat/integration/agents/agent-tests.ts", "test-hardhat/utils/new-asset-manager.ts", "test-hardhat/utils/test-asset-context.ts"    ],
    "ts-node": {
        "files": true
    }
}
